<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbds.nfcapplicationsmartphone.ProfileActivity"
    android:orientation="vertical"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ISIT"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Profile"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Nom:"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EditTextNom"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prenom:"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/EditTextPrenom"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de Naissance:"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditTextDns"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/EditTextEmail"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:background="@drawable/border"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mot de passe:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/EditTextMdp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:background="@drawable/border"
        android:textCursorDrawable="@drawable/color_cursor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taille:"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/EditTextTaille"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_width="100dp"
                android:textSize="15dp"
                android:background="@drawable/border"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poids:"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/EditTextPoids"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_width="100dp"
                android:textSize="15dp"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville:"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/EditTextVille"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="15dp"
                android:layout_width="100dp"
                android:background="@drawable/border"
                android:textCursorDrawable="@drawable/color_cursor">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code Postal:"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/EditTextCP"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="15dp"
                android:layout_width="100dp"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumÃ©ro voie:"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/EditTextNV"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="15dp"
                android:layout_width="100dp"
                android:background="@drawable/border"
                android:textCursorDrawable="@drawable/color_cursor"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type voie:"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/EditTextTV"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="15dp"
                android:layout_width="100dp"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/modifi"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Modifier"
            android:background="@color/colorPrimary"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>
