<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbds.nfcapplicationsmartphone">

    <!-- The NFC permission is required to use NfcAdapter. -->
    <uses-permission android:name="android.permission.NFC" />
    <!-- Inform app distribution channels that NFC is used, though not required. -->
    <!-- (This step is optional, but recommended.) -->
    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ConnectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ReglageActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".AppareillageActivity"></activity>
    </application>

</manifest>